<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yxx.dao.MessageMapper">
    <resultMap id="MessageResultMap" type="com.yxx.pojo.Message">
        <result column="message_id" property="messageId" />
        <result column="goods_id" property="goodsId" />
        <result column="message" property="message" />
        <result column="openID" property="openID" />
        <result column="create_time" property="createTime" />
    </resultMap>
    <!--    查询买家留言-->
    <select id="selectMyMessage" resultType="com.yxx.pojo.MessageCustom">
        select * from message,goods,user
        where goods.openID=#{openID} and goods.goods_id=message.goods_id and message.openID=user.openID
        order by message.create_time desc
        limit #{currentPage},15
    </select>
</mapper>