.issue {
    padding: 30rpx;
}

.goods-title {
    height: 70rpx;
    border-bottom: 4rpx solid #d6cfcfa8;
    padding: 10rpx 4rpx;
    font-size: 34rpx;
    color: rgb(124, 133, 133)
}

.goods-info {
    margin-top: 10rpx;
    padding: 10rpx 4rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 34rpx;
    color: rgb(124, 133, 133)
}

.add-pic {
    width: 150rpx;
    height: 150rpx;
}

.image-box {
    display: inline-block;
    position: relative;
}

.close-image {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    height: 50rpx;
    width: 50rpx;
}

.goods-image {
    height: 200rpx;
    width: 200rpx;
    border-radius: 10rpx;
}

.price-box {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 34rpx;
}

.price-unit,
.goods-price,
.goods-type {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 10rpx 20rpx;
    color: rgb(124, 133, 133);
}

.price-unit {
    width: auto;
}