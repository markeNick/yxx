.other-issue {
    padding: 10 20rpx;
    height: 100%;
}

.user-box {
    padding: 20rpx 0;
    height: 170rpx;
    background-color: #70d3e6;
    text-align: center;
}

.user-head {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.issue {
    display: flex;
    justify-content: space-around;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 10rpx;
    box-sizing: border-box;
    background: #fff;
}

.issue-box {
    width: 47%;
}

.image-box {
    position: relative
}

.goods-pic {
    width: 100%;
    height: 280rpx;
    border-radius: 10rpx;
}

.task {
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.562);
    z-index: 11;
    width: 100%;
    height: 280rpx;
    border-radius: 10rpx;
    color: #fff;
    text-align: center;
    display: flex;
    align-items: center;
}

.task-font {
    height: 60rpx;
    line-height: 60rpx;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.2)
}

.goods-title {
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    font-size: 30rpx;
    font-weight: 500;
}

.goods-price {
    font-size: 36rpx;
    font-weight: 700;
    color: rgb(224, 33, 33)
}